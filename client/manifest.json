{
  "name": "Long Distance Netflix",
  "description": "This extension allows users to establish a server-client connection to simultaneously stream Netflix content.",
  "version": "0.1",
  "manifest_version": 2,
  "permissions": [
      "tabs",
      "storage",
      "activeTab",
      "*://*.netflix.com/watch/*",
      "*://netflix.com/watch/*",
      "http://jlin.club:3000/start_lobby"
  ],
  "background": {
      "scripts": ["background.js"]
  },
  "page_action": {
      "default_popup": "popup.html"
  }

  
}

