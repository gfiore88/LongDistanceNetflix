{
  "name": "Long Distance Netflix",
  "description": "This extension allows users to establish a server-client connection to simultaneously stream Netflix content.",
  "version": "0.1",
  "manifest_version": 2,
  "permissions": [
      "tabs",
      "storage",
      "http://localhost:3000/start_lobby"
  ],
  "background": {
      "scripts": ["background.js"]
  },
  "page_action": {
      "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://netflix.com/watch/*", "*://*.netflix.com/watch/*"],
      "js": ["player.js"],
      "run_at": "document_idle"
    }
  ]
}
